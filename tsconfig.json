{
    // Astro TSConfig configuration
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        // @types/mdx seems to be broken without this. Weird.
        "skipLibCheck": true,
        // Aliases
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"]
        }
    }
}
