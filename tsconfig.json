{
  // Astro TSConfig base configuration
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // TEMP: Will be removed when TS5 releases officially.
    "ignoreDeprecations": "5.0",

    // Aliases
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@config": ["src/site.config.ts"]
    }
  }
}
