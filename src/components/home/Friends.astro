---
import { friends } from '@utils/index';
import { Image } from 'astro:assets';
---

<span class="flex flex-wrap justify-center gap-3 pt-5 md:justify-normal md:gap-2.5 lg:gap-3">
  {
    friends.map((friend) => {
      return (
        <a href={friend.link} title={`${friend.name}'s site`} target="_blank">
          <Image
            class="w-[88px]"
            src={`friends/${friend.image}`}
            alt={`Webring of ${friend.name}`}
            width={88}
            height={31}
          />
        </a>
      );
    })
  }
</span>
