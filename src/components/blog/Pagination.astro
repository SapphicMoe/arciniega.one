---
import Link from '@components/base/Link.astro';

import { Icon } from 'astro-iconify';

const { page } = Astro.props;
---

{
  page.url.next && (
    <div class="flex flex-row-reverse pb-2 pt-2">
      <Icon size={35} class="text-ctp-mauve dark:text-ctp-pink" name="mdi:arrow-right-thin" />
      <Link title="See older blog posts" href={page.url.next}>
        See older posts
      </Link>
    </div>
  )
}

{
  page.url.prev && (
    <div class="flex pb-2 pt-2">
      <Icon size={35} class="text-ctp-mauve dark:text-ctp-pink" name="mdi:arrow-left-thin" />
      <Link title="See newer blog posts" href={page.url.prev}>
        See recent posts
      </Link>
    </div>
  )
}
