---
/* eslint-disable */
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}
/* eslint-enable */

const { href, class: className, color = 'text-ctp-mauve dark:text-ctp-pink', ...props } = Astro.props;
---

<a
  href={href}
  class:list={[className, 'hover:underline hover:opacity-60 transition ease-out font-medium', color]}
  {...props}><slot /></a
>
