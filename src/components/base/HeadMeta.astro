---
import { SEO } from 'astro-seo';
import { base, blog } from '@config';

interface Props {
  description?: string;
  pageTitle: string;
  title: string;
  ogImage?: {
    src?: string;
    alt?: string;
  };
}

const { description, pageTitle, ogImage, title } = Astro.props;

const {
  blog: {
    rss,
    rss: { options },
  },
} = await import('@config');

const siteName = Astro.site?.hostname;
const image = new URL(ogImage?.src ?? base.favicon?.fileName, Astro.site).href;
---

<SEO
  {title}
  {description}
  charset={'UTF-8'}
  openGraph={{
    basic: {
      title: pageTitle,
      type: 'website',
      image,
    },
    optional: {
      siteName,
      description,
    },
    image: {
      alt: base.favicon.altText,
    },
  }}
  twitter={{
    card: 'summary',
    creator: 'solelychloe',

    image,
    imageAlt: ogImage?.alt ?? base.favicon?.altText,
  }}
  extend={{
    meta: [
      { name: 'viewport', content: 'width=device-width, initial-scale=1' },
      { name: 'generator', content: Astro.generator },
      { name: 'theme-color', content: base.themeColor },
    ],
    link: [
      { rel: 'icon', href: image },
      { rel: 'me', href: 'https://tech.lgbt/@solely' },
    ],
  }}
/>

{rss.enabled && <link rel="alternate" {...options} type="application/rss+xml" />}
