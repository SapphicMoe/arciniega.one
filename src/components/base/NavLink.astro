---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  class: string;
  text: string;
}

const { text, href, class: className, ...props } = Astro.props;

let isActive: boolean;

if (!href) {
  isActive = false;
} else if (href === '/') {
  isActive = href === Astro.url.pathname;
} else if (Astro.url.pathname.includes('/article')) {
  isActive = href === '/articles';
} else {
  isActive = Astro.url.pathname.includes(typeof href === 'string' ? href : href.href);
}
---

<a
  class:list={[className, { 'font-extrabold underline': isActive }]}
  {href}
  {...props}
  title={`${text} page`}
>
  <slot />
  {text}
</a>
