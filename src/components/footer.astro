---
import Link from '@components/link.astro';
import Separator from '@components/separator.astro';
---

<footer class="flex flex-grow flex-col pt-1">
  <slot />

  <hr />

  <nav class="flex-cel links flex">
    <Link href="/" title="Home" rel="prefetch">Home</Link>
    <Separator />
    <Link href="/posts" title="Posts" rel="prefetch">Posts</Link>
    <Separator />
    <Link href="/credits.txt" title="Credits" rel="prefetch">Credits</Link>
    <Separator />
    <Link href="/domains" title="Domains" rel="prefetch">Domains</Link>
    <Separator />
    <Link href="https://github.com/solelychloe/arciniega.one" title="Source code" target="_blank">Source</Link>
  </nav>
</footer>

<style>
  a,
  hr {
    @apply text-ctp-pink;
  }

  .links {
    @apply flex flex-wrap gap-[15px] md:gap-[10px];
    @apply pt-4 pb-1;
  }
</style>
