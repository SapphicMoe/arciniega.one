---
import { SEO } from 'astro-seo';
import { socials } from '~/constants.cjs';

interface Props {
    description: string;
    siteName: string;
    title: string;
}

// Favicon
const image = new URL(Astro.site!);
image.pathname = '/favicon.png';

const { description, siteName, title } = Astro.props;
---

<!-- Base -->
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<meta name="generator" content={Astro.generator} />

<!-- Flavor -->
<meta name="theme-color" content="#e0802c" />

<!-- SEO -->
<SEO
    title={title}
    description={description}
    openGraph={{
        basic: {
            title: title,
            type: 'website',
            image: image.toString()
        },
        optional: {
            siteName,
            description
        },
        image: {
            alt: 'A pink love heart with stars around it, making it look like it is sparkling or shimmering.'
        }
    }}
    twitter={{
        card: 'summary',
        creator: '@solelychloe'
    }}
    extend={{
        link: [
            // Icon
            { rel: 'icon', href: image.pathname },

            // Mastodon verification
            { rel: 'me', href: `${socials.mastodon.link}` }
        ]
    }}
/>
