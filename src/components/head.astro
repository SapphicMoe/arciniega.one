---
import { SEO } from 'astro-seo';
import { base, feed, socials } from '@config';

const { description, title } = Astro.props;

const siteName = Astro.site?.hostname;

const image = new URL(base.favicon?.fileName || '/favicon.png', Astro.site).href;

const IS_PRODUCTION = import.meta.env.MODE === 'production';
---

<head>
  <!-- Compatibility -->
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- RSS -->
  {feed && <link rel="alternate" type="application/rss+xml" title={feed.title} href={`https://${base.site}/rss.xml`} />}

  {
    IS_PRODUCTION && !!base.plausible.analytics && !!base.site && (
      <script defer data-domain={base.site} data-api="/api/event" src="/js/script.js" />
    )
  }

  <!-- SEO -->
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title,
        type: 'website',
        image,
      },
      optional: {
        siteName,
        description,
      },
      image: {
        alt: base.favicon && base.favicon.alt,
      },
    }}
    twitter={{
      card: 'summary',
      creator: socials && socials.twitter,
    }}
    extend={{
      meta: [
        // Astro generator
        { name: 'generator', content: Astro.generator },

        // Theme color
        { name: 'theme-color', content: base.seo && base.seo.color },

        // Keywords
        { name: 'keywords', content: `${base.seo && base.seo.keywords}` },
      ],
      link: [
        // Icon
        { rel: 'icon', href: image },

        // Mastodon verification
        { rel: 'me', href: socials && `${socials.mastodon.link}` },
      ],
    }}
  />

  <slot />
</head>
