---
import { SEO } from 'astro-seo';

import { base, feed, socials } from '@config';
import type { PageProps } from '~/types';

// Favicon
const image = new URL(Astro.site!);
image.pathname = base.favicon?.fileName || '/favicon.png';

const IS_PRODUCTION = import.meta.env.MODE === 'production';

const { description, siteName, title } = Astro.props as PageProps;
---

<head>
  <!-- Compatibility -->
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- RSS -->
  {
    feed && (
      <link rel="alternate" type="application/rss+xml" title={feed.title} href={`https://www.${base.site}/rss.xml`} />
    )
  }

  <!-- Metadata & analytics -->
  <meta name="generator" content={Astro.generator} />
  {
    IS_PRODUCTION && !!base.plausible.analytics && !!base.site && (
      <script defer data-domain={base.site} data-api="/api/event" src="/js/script.js" />
    )
  }

  <!-- Flavor -->
  <meta name="theme-color" content={base.seo && base.seo.color} />

  <!-- SEO -->
  <SEO
    title={title}
    description={description}
    openGraph={{
      basic: {
        title,
        type: 'website',
        image: image.toString(),
      },
      optional: {
        siteName,
        description,
      },
      image: {
        alt: base.favicon && base.favicon.alt,
      },
    }}
    twitter={{
      card: 'summary',
      creator: socials && socials.twitter,
    }}
    extend={{
      meta: [
        // Keywords
        { name: 'keywords', content: `${base.seo && base.seo.keywords}` },
      ],
      link: [
        // Icon
        { rel: 'icon', href: image?.pathname },

        // Mastodon verification
        { rel: 'me', href: socials && `${socials.mastodon.link}` },
      ],
    }}
  />

  <slot />
</head>
