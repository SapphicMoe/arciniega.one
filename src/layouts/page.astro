---
import Head from '@components/head.astro';

import '@fontsource/inter';
import '@styles/sakura.scss';

interface Props {
  description: string;
  siteName?: string;
  title: string;
}

const { content } = Astro.props;

const {
  description = content.description ?? '',
  siteName = content.siteName ?? '',
  title = content.title ?? '',
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <Head description={description} siteName={siteName} title={title}>
    <slot name="head" />
  </Head>

  <body>
    <slot />
  </body>
</html>
