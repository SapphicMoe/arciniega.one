---
export const prerender = true;

import { getCollection, CollectionEntry } from 'astro:content';
import ArticleLayout from '@layouts/Article.astro';
import getPostData from '@lib/PostData';

export async function getStaticPaths() {
  const articles = await getCollection('posts');
  return articles.map((post) => ({
    params: { slug: post.slug },
    props: {
      post: {
        ...post,
        data: {
          ...post.data,
          timeEstimate: getPostData(post).readingTime,
        },
      },
    },
  }));
}

interface Props {
  post: CollectionEntry<'articles'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<ArticleLayout {...post.data}>
  <Content />
</ArticleLayout>
