---
import ArticleLayout from '@layouts/Article.astro';

import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');

  return articles.map((article) => ({
    params: { slug: article.slug },
    props: {
      post: article,
    },
  }));
}

interface Props {
  post: CollectionEntry<'articles'>;
}

const {
  post,
  post: { slug },
} = Astro.props;

const { Content, remarkPluginFrontmatter: frontmatter } = await post.render();
---

<ArticleLayout {...post.data} {slug} minutesRead={frontmatter.minutesRead}>
  <Content />
</ArticleLayout>
