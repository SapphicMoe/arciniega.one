---
import Layout from '@layouts/Page.astro';
import Donation from '@components/home/Donation.astro';
import Friends from '@components/home/buttons/Friends.astro';
---

<Layout pageTitle="Sapphic Angels">
  <Donation />

  <section class="flex flex-col gap-y-5 pt-3" aria-label="introduction">
    <h1 class="title">Hello!</h1>

    <p>
      We're the Sapphic Angels system. We're software engineers with a fascination for system administration and messing
      about with pieces of technology. Feel free to look around to get to know us better! ^w^
    </p>
  </section>

  <section class="pt-5 motion-reduce:hidden" aria-hidden={true}>
    <h1 class="title">Friends</h1>

    <Friends />
  </section>
</Layout>
